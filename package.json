{
  "name": "treasurer2026",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Treasurer - Full-stack financial management application",
  "scripts": {
    "dev": "pnpm --parallel --filter treasurer --filter treasurer-api dev",
    "build": "pnpm --filter treasurer-api build && pnpm --filter treasurer build",
