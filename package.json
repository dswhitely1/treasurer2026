    "type-check": "pnpm --recursive type-check",
    "prepare": "husky install"
  },
  "keywords": [
    "finance",
    "accounting",
    "monorepo"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "prettier-plugin-tailwindcss": "^0.5.14"
  }
}
