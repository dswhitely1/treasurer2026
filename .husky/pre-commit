# Pre-commit hook - runs Prettier and ESLint on staged files using lint-staged
# Prevents committing code that doesn't meet style and linting standards

# Run lint-staged to format and lint staged files
pnpm lint-staged

# Exit code will propagate lint-staged result
exit_code=$?
if [ $exit_code -ne 0 ]; then
  echo ""
  echo "Pre-commit checks failed. Please fix the issues above and try again."
fi
exit $exit_code
