#!/bin/sh
# Commit-msg hook - validates commit message format using conventional commits
# Ensures consistent commit messaging across the team

. "$(dirname "$0")/_/husky.sh"

# Color codes for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

commit_msg_file=$1
commit_msg=$(cat "$commit_msg_file")

# Validate commit message format: type(scope): description
# Valid types: feat, fix, docs, style, refactor, perf, test, chore, ci, build
if ! echo "$commit_msg" | grep -qE '^(feat|fix|docs|style|refactor|perf|test|chore|ci|build)(\(.+\))?!?: .{1,}'; then
  echo ""
  echo -e "${RED}Invalid commit message format!${NC}"
  echo ""
  echo "Commit message must follow Conventional Commits format:"
  echo -e "  ${YELLOW}<type>[optional scope]: <description>${NC}"
  echo ""
  echo "Types: feat, fix, docs, style, refactor, perf, test, chore, ci, build"
  echo ""
  echo "Examples:"
  echo -e "  ${GREEN}feat(auth): add login functionality${NC}"
  echo -e "  ${GREEN}fix(database): resolve connection timeout issue${NC}"
  echo -e "  ${GREEN}docs: update README with setup instructions${NC}"
  echo -e "  ${GREEN}chore(deps): upgrade typescript to 5.3.0${NC}"
  echo ""
  echo "Your commit message:"
  echo -e "  ${RED}$commit_msg${NC}"
  echo ""
  exit 1
fi

echo -e "${GREEN}Commit message format validated!${NC}"
